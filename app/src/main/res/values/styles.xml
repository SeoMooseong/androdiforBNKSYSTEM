<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBars</item>
        <item name="android:statusBarColor">@color/PointColor</item>

    </style>
    <style name="ActionBars" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/PointColor</item>
        <item name="titleTextStyle">@style/ActionBars_title</item>
    </style>
    <style name="ActionBars_title"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/WhiteColor</item>
    </style>
    <style name="navigationView">
        <item name="android:background">@color/WhiteColor</item>
    </style>

</resources>
